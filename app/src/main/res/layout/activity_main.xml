<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_1edit"
            android:orientation="vertical"
            android:weightSum="1"
            android:baselineAligned="false"
            android:touchscreenBlocksFocus="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
    <TextView
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Featured"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:layout_alignRight="@+id/law_text"
        android:layout_alignEnd="@+id/law_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="BILL"
        android:id="@+id/textView8"

        android:layout_alignLeft="@+id/textView12"
        android:layout_below="@+id/textView12"
        android:layout_toLeftOf="@+id/textView7"
        android:layout_toStartOf="@+id/textView7" />

            <TextView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent et nibh nisi. Aenean leo massa, hendrerit ut purus vel, condimentum rhoncus nunc. Aenean volutpat augue in purus suscipit efficitur. Sed varius metus at vulputate viverra. Sed sodales elementum quam, vitae gravida arcu. Sed ullamcorper vestibulum nibh, interdum facilisis nisl tincidunt in."
        android:id="@+id/bill_text"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Porem ipsum dolor sit amet, consectetur adipiscing elit. Praesent et nibh nisi. Aenean leo massa, hendrerit ut purus vel, condimentum rhoncus nunc. Aenean volutpat augue in purus suscipit efficitur. Sed varius metus at vulputate viverra. Sed sodales elementum quam, vitae gravida arcu. Sed ullamcorper vestibulum nibh, interdum facilisis nisl tincidunt in."
                android:id="@+id/law_text"
                android:layout_below="@+id/textView8"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See More..."
        android:id="@+id/button"
                android:onClick="accessPage"
                android:layout_alignBaseline="@+id/button4"
                android:layout_alignBottom="@+id/button4"
                android:layout_alignRight="@+id/textView8"
                android:layout_alignEnd="@+id/textView8" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details..."
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button"
        android:layout_alignLeft="@+id/law_text"
        android:layout_alignStart="@+id/law_text"
        android:layout_alignRight="@+id/law_text"
        android:layout_alignEnd="@+id/law_text"
        android:onClick="accessPage"
        android:layout_below="@+id/topics_text" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="LAW"
        android:id="@+id/textView7"
        android:layout_alignLeft="@+id/law_text"
        android:layout_alignStart="@+id/law_text"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignEnd="@+id/textView12"
        android:layout_below="@+id/textView12"
        android:layout_above="@+id/law_text"
        android:layout_gravity="top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Trending"
        android:id="@+id/textView11"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See More..."
                android:id="@+id/button3"
                android:onClick="accessPage"
                android:layout_above="@+id/textView11"
                android:layout_alignLeft="@+id/law_text"
                android:layout_alignStart="@+id/law_text"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See More..."
                android:id="@+id/button4"
                android:onClick="accessPage"
                android:layout_below="@+id/bill_text"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/bill_text"
                android:layout_alignEnd="@+id/bill_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Topics"
                android:id="@+id/topics_text"
                android:layout_below="@+id/textView11"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/textView5"
                android:layout_below="@+id/textView11"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/button2" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>